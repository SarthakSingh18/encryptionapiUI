    <script>
        $("#form").validate({
    rules: {        
        email: {
            required: true,
            email:true
        },
    },
    messages: {  
        firstname:{
            required:"Please Enter First Name"
        },
        lastname:{
            required:"Please Enter Last Name"
        },    
        email: {
            required: "Please Enter email",
            email:"Please Enter valid Email Address"
        },
    },
        });
   
    </script>


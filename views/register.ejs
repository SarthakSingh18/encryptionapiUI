    <div class="masthead">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1>Sign Up</h1>
                </div>
            </div>
        </div>
    </div>
</header>


<!-- Form -->

<section class="card-section">
    <div class="container">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="card text-center">

                <header class="text-center">
                    <h2 class="section-title">Create New Account</h2>
                    <div class="section-subtitle"></div>
                </header>

                <form id="form" method="POST" action="signupDetails" >
                    <div class="row">
                        <div class="col-md-6">   <input type="text" required name="firstname" required class="search-field" placeholder="First Name"></div>
                        <div class="col-md-6">   <input type="text" required name="lastname"required class="search-field" placeholder="Last Name"></div>
                        <div class="col-md-12">  <input type="text" required name="email" required class="search-field" placeholder="Email Address"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-success" value="Create Account">
                            <p id="forget-pass" class="forget-pass">A verification email wil be sent to you with ApiKey</p>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</section>



<!-- Call To Action -->

    <footer>
        <div class="container">
            <div class="row">
